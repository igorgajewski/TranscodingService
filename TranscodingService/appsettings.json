{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Username=postgres;Password=mysecretpassword;Database=PAINdb"
  },
  "NLog": {
    "targets": {
      "file": {
        "archiveEvery": "Day",
        "archiveFileName": "Log/archived/${shortdate}.log",
        "fileName": "Log/${shortdate}.log",
        "layout": "${longdate} PID ${processid} -> ${message} ${exception}",
        "maxArchiveFile": "31",
        "type": "File"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minlevel": "Info",
        "writeTo": "file"
      }
    ]
  }
}
